generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  active Boolean
  count  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // author User    @relation(fields: [authorId], references: [id])
